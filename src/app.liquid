<div ng-app="productReviewAppModule" i-area="medium">
    <div ng-show="::false" i-card i-text="centered">
        Loading&hellip;
    </div>

    {% include titleModule/title.liquid %}

    {% include stepsModule/stepsMenu.liquid %}

    <div ng-controller="stepsContentCtrl as stepsContent">
        <div ng-show="stepsContent.currentStepId === 'review'">
            {% include reviewFormModule/reviewForm.liquid %}

            {% include stepsModule/nextStepButton.liquid label="Next" %}
        </div>

        <div ng-show="stepsContent.currentStepId === 'socials'">
            <div i-card>
                <checkbox-field label="Facebook" name="facebook"></checkbox-field>
                <checkbox-field label="Twitter" name="twitter"></checkbox-field>
                <checkbox-field label="LinkedIn" name="linkedIn"></checkbox-field>
            </div>

            {% include stepsModule/nextStepButton.liquid label="Next" %}
        </div>

        <div ng-show="stepsContent.currentStepId === 'summary'">
            {% include summaryModule/summary.liquid %}

            {% include stepsModule/nextStepButton.liquid label="Publish" %}
        </div>

        <div i-card ng-show="stepsContent.currentStepId === 'final'">
            Your review has been published successfully!
        </div>
    </div>

    <footer i-text="centered">
        <a href="{{site.rootSiteUrl}}">made by leszek</a>
    </footer>
</div>
